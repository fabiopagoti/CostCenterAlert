<mvc:View xmlns="sap.ui.table" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar" controllerName="festo.co.costcenteralert.controller.Worklist">
	<semantic:SemanticPage id="page">
		<semantic:content>
			<TreeTable id="treeTable" selectionMode="Single" enableColumnReordering="false" expandFirstLevel="false"
				rows="{ path : '/CostCenterGroups', parameters : { operationMode: 'Client', countMode: 'Inline', treeAnnotationProperties : { hierarchyLevelFor : 'HierarchyLevel', hierarchyNodeFor : 'Id', hierarchyParentNodeFor : 'ParentId', hierarchyDrillStateFor : 'DrillState' } } }">
				<columns>
					<Column label="Name">
						<template>
							<m:Text text="{Name}"/>
						</template>
					</Column>
					<Column label="HierarchyLevel">
						<template>
							<m:Text text="{HierarchyLevel}"/>
						</template>
					</Column>
					<Column label="ID">
						<template>
							<m:Text text="{Id}"/>
						</template>
					</Column>
					<Column label="Parent">
						<template>
							<m:Text text="{ParentId}"/>
						</template>
					</Column>
				</columns>
			</TreeTable>
			<m:List noDataText="Drop list items here" items="{/CostCenterGroups}">
				<m:items>
					<m:StandardListItem title="{Id}" description="{Name}" icon="sap-icon://picture"/>
				</m:items>
			</m:List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>